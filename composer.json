{
    "name": "dazzet/convertloop-wordpress",
    "description": "Convertloop for Wordpress",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Dazzet",
            "email": "info@dazzet.co"
        }
    ],
    "require": {
        "convertloop/convertloop-php": "^0.1.0"
    },
    "autoload":{
      "psr-4":{
        "WpConvertloop\\":"lib/"
      }
    },
    "scripts": {
      "zip": "T_DIR=`basename ${PWD}` && rm -f ${T_DIR}.zip && cd .. && zip -r ${T_DIR}/${T_DIR}.zip ${T_DIR} -x ${T_DIR}/.* -x ${T_DIR}/*.md -x ${T_DIR}/composer.* -x ${T_DIR}/*.sh "
    }
}
